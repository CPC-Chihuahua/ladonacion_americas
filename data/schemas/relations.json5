{
    $schema: "http://json-schema.org/draft-07/schema#",
    id: "/relations",
    title: "Relations",
    description: "The different types of connections between objects",
    type: "array",
    items: {
        type: "object",
        additionalProperties: false,
        properties: {
            id: {
                type: "string",
                format: "id",
            },
            description: {
                type: "string",
                minLength: 1,
            },
            type: {
                type: "string",
                minLength: 1,
            },
            templates: {
                oneOf: [
                    {
                        type: "object",
                        additionalProperties: false,
                        properties: {
                            direct: {
                                $ref: "#/definitions/template",
                            },
                            reverse: {
                                $ref: "#/definitions/template",
                            },
                        },
                        required: [
                            "direct",
                            "reverse",
                        ],
                    },
                    {
                        $ref: "#/definitions/template",
                    },
                ],
            },
            subjects: {
                type: "array",
                minItems: 1,
                items: {
                    $ref: "#/definitions/object",
                },
            },
            objects: {
                type: "array",
                minItems: 1,
                items: {
                    $ref: "#/definitions/object",
                },
            },
        },
        required: [
            "id",
            "type",
            "description",
            "templates",
            "subjects",
            "objects",
        ],
    },
    definitions: {
        template: {
            id: "/relations/template",
            type: "object",
            additionalProperties: false,
            properties: {
                male: {
                    type: "string",
                    minLength: 1,
                },
                female: {
                    type: "string",
                    minLength: 1,
                },
            },
            required: [
                "male",
                "female",
            ],
        },
        object: {
            id: "/relations/object",
            type: "string",
            enum: ["persons", "entities", "articles", "documents", "events", "places"],
        },
    },
}
