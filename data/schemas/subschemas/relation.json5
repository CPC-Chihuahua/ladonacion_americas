{
    $schema: "http://json-schema.org/draft-07/schema#",
    id: "/relation",
    title: "Relation",
    description: "A relation between two objects",
    type: "object",
    additionalProperties: false,
    properties: {
        object: {
            type: "string",
            format: "reference",
        },
        subject: {
            type: "string",
            format: "reference",
        },
        type: {
            type: "string",
            format: "reference",
        },
        period: {
            type: "array",
            minItems: 1,
            maxItems: 2,
            items: {
                type: "string",
                format: "date",
                validate: true,
            },
        },
    },
    required: [
        "object",
        "subject",
        "type",
    ],
}
